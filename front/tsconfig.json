{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@pages/*": [
        "src/components/pages/*"
      ],
      "@theme/*": [
        "src/theme/*"
      ],
      "@states/*": [
        "src/states/*"
      ],
      "@atoms/*": [
        "src/components/UI/atoms/*"
      ],
      "@frames/*": [
        "src/components/UI/frames/*"
      ],
      "@molecules/*": [
        "src/components/UI/molecules/*"
      ],
      "@organisms/*": [
        "src/components/UI/organisms/*"
      ],
      "@icons/*": [
        "src/components/icons/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
